        </p>
        <% end %>
            <table>
                <tr>
                    <th> State </th>
                    <th> Total # Delegates </th>
                    <% @election.candidates.each do |c| %>
                        <th>
                            <%= c.full_name %>
                        </th>
                        <% end %>
                </tr>
                <% @election.contests.each do |contest| %>
                    <tr>
                        <th>
                            <%= contest.state.name %>
                        </th>
                        <th>
                            <%= contest.number_delegates %>
                        </th>
                        <% @election.candidates.each do |c| %>
                            <th>
                                <%= contest.results.pledged.by_candidate(c.id).total_delegate_count %>
                            </th>
                            <% end %>
                    </tr>
                    <% end %>
            </table>
</div>
