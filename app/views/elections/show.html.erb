<div class="mContainer">
    <h2> <%= @election.name %> </h2>

    <div id="candidates-box">
      <% @election.candidates_sorted_by_delegate_count.each do |c| %>
         <div class="candidate-box" data-id="<%= c.id %>">
            <div class="color-key">&nbsp;</div> 
            <span> <%= c.first_name %> <%= c.last_name %> - <%= c.delegate_count %></span>
         </div>
      <% end %>
    </div>
    
    <div class="lg-map-wrapper">
        <div id="lg-map"></div>
        <div class="lg-map-text"></div>
    </div>
    <% @election.candidates_sorted_by_delegate_count.each do |c| %>
